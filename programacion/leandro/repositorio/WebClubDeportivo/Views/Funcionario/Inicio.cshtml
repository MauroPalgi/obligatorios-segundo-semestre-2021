
@{
    ViewBag.Title = "Inicio";
}

<div class="form-group">
    <form action="/socio/buscarSocio" method="post">
        <input type="text" class="form-control" placeholder="Search" name="cedula">
        <button type="submit" class="btn btn-default">Buscar Socio</button>
    </form>
</div>

@if (ViewBag.listaSocios == null)
{
    <p>Usted no Socios registradas</p>
}
else
{
    <table class="table table-bordered">
        <tr>
            <th class="text-center">Nombre</th>
            <th class="text-center">Cedula</th>
            <th class="text-center">Detalles</th>
        </tr>
        @foreach (var socio in ViewBag.listaSocios)
        {
            <tr>
                <td class="text-center">@socio.Nombre</td>
                <td class="text-center">@socio.Cedula</td>
                <td class="text-center">@Html.ActionLink("Detalles", "Detalles", "Socio", new { cedula = socio.Cedula }, new { @class = "" })</td>
            </tr>
        }
    </table>
}
