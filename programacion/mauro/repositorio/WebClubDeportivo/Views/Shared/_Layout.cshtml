<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

             <div class="navbar-collapse collapse">

                    @if (Session["logeado"] == null)
                    {
                 <ul class="nav navbar-nav">            

                     @*@if (ViewContext.RouteData.Values["Action"].ToString() == "Login")
                     {
                         <li>@Html.ActionLink("Registrarse", "AltaFuncionario", "Funcionario")</li>
                     }*@
                     @if (ViewContext.RouteData.Values["Action"].ToString() == "Logout")
                     {
                         <li>@Html.ActionLink("Ingresar", "Login", "Funcionario")</li>

                     }
                 </ul>
                    }
                    @if (Session["logeado"] != null)
                    {
             <ul class="nav navbar-nav">
                 <li>@Html.ActionLink("Lista de socios", "Inicio", "Funcionario")</li>
                 <li>@Html.ActionLink("Agregar Socio", "AltaSocio", "Socio")</li>
                 <li>@Html.ActionLink("Agregar Funcionario", "AltaFuncionario", "Funcionario")</li>
                 <li>@Html.ActionLink("Descargar Archivo de texto", "Alta", "Socio")</li>
                 <li>@Html.ActionLink("Logout", "Logout", "Funcionario")</li>
             </ul>
                    }

                </div>
            </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

